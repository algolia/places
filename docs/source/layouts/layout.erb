<!doctype html>
<html>
  <head>
    <meta content="IE=edge" http-equiv="X-UA-Compatible">
    <meta charset="utf-8">
    <meta content="width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no" name="viewport">
    <!--[if IE]><link rel="shortcut icon" href="images/favicon.png"><![endif]-->
    <link rel="icon" href="images/favicon.png">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <title>Algolia Places<%= " | #{current_page.data.title}" if (current_page.path != 'index.html') %></title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/hint.css/2/hint.min.css" />
    <link rel="stylesheet" media="screen" href="//fonts.googleapis.com/css?family=Raleway:300,800">
    <%= stylesheet_link_tag :site %>
    <%= auto_stylesheet_link_tag %>
    <%= javascript_include_tag config[:places_lib_url] %>
  </head>

  <body class="<%= page_classes %>">
    <%= partial("/partials/navigation") %>
    <%= partial("/partials/hero") %>
    <%= yield %>
    <%= partial "/partials/footer" %>
    <script>
      var currentPath = '<%= current_page.path %>';
      var clippyPath = '<%= image_path 'clippy.svg' %>';
    </script>
    <%= auto_javascript_include_tag %>
  </body>
</html>
